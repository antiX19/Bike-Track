<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/bike_logo"
            android:src="@drawable/ic_logo_wobg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingBottom="8dp"
                    android:text="@string/title_activity_pswd"
                    android:textColor="@color/Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik_variablefont_wght"
                    tools:ignore="RtlHardcoded" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:visibility="visible"
                    android:paddingTop="10dp"
                    android:paddingBottom="16dp"
                    android:text="@string/activity_pswd_ressource_text"
                    android:textColor="#4A5568"
                    android:fontFamily="@font/rubik_variablefont_wght"
                    android:textSize="14sp" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/editTextEmailRecovery"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:hint="@string/email_entry"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/edittext_bg_whitebg"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="0dp"/>

                <!-- Request Reset Link Button -->
                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/buttonSendRecovery"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/apptheme"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubik_variablefont_wght"
                    android:text="@string/Send_secret_question"
                    android:textColor="@android:color/white"/>

                <!-- Back to Login Link -->
                <TextView
                    android:id="@+id/buttonBypass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/back_to_login"
                    android:fontFamily="@font/rubik_variablefont_wght"
                    android:textColor="@color/apptheme"
                    android:textSize="14sp" />

                <!-- Nouveaux éléments pour saisir le code de récupération, initialement invisibles -->
                <EditText
                    android:id="@+id/editTextRecoveryCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Saisissez le code de récupération"
                    android:inputType="number"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/buttonValidateRecoveryCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valider le code"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"/>

                <!-- Layout pour la question secrète et réponse (initialement invisible) -->
                <LinearLayout
                    android:id="@+id/layoutSecretQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:background="@drawable/rounded_bg">

                    <TextView
                        android:id="@+id/textViewSecretQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Votre question secrète"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/Title"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextSecretAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Répondez à la question secrète"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/edittext_bg_whitebg" />

                    <Button
                        android:id="@+id/buttonValidateSecretAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="Valider"
                        android:backgroundTint="@color/apptheme"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Layout pour changer le mot de passe (initialement invisible) -->
                <LinearLayout
                    android:id="@+id/layoutNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="24dp">

                    <EditText
                        android:id="@+id/editTextNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nouveau mot de passe"
                        android:inputType="textPassword" />

                    <EditText
                        android:id="@+id/editTextConfirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmez le nouveau mot de passe"
                        android:inputType="textPassword"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/buttonUpdatePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Changer le mot de passe"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
