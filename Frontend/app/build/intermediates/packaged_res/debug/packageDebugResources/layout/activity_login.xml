<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Logo ou Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp"/>

    <!-- Identifiant -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/identifiant"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="20dp"
        android:inputType="text"/>

    <!-- Mot de passe -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/mot_de_passe"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/edittext_bg_whitebg"
        android:drawableStart="@drawable/ic_lockon"
        android:drawablePadding="30dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>


    <!-- Se rappeler de mes identifiants -->
    <CheckBox
        android:id="@+id/cbRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/se_rappeler_de_mes_identifiants"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <!-- Bouton Se connecter -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/mot_de_passe_oubli"
        android:textColor="@color/heavy_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/se_connecter"
        android:textSize="18sp"
        android:backgroundTint="@color/apptheme"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"/>

    <!-- Bouton crÃ©er un compte -->
    <TextView
        android:id="@+id/creercompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/creer_un_compte"
        android:textColor="@color/apptheme"
        android:textSize="16sp" />
</LinearLayout>
