<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titre de la page -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Récupération mot de passe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Champ de saisie de l'email -->
    <EditText
        android:id="@+id/editTextEmailRecovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisissez votre email"
        android:inputType="textEmailAddress" />

    <!-- Bouton pour envoyer la demande -->
    <Button
        android:id="@+id/buttonSendRecovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envoyer la demande"
        android:layout_marginTop="24dp" />

    <!-- Layout pour la question secrète et réponse (initialement invisible) -->
    <LinearLayout
        android:id="@+id/layoutSecretQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textViewSecretQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votre question secrète"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextSecretAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Répondez à la question secrète"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonValidateSecretAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider" />
    </LinearLayout>

    <!-- Layout pour changer le mot de passe (initialement invisible) -->
    <LinearLayout
        android:id="@+id/layoutNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nouveau mot de passe"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmez le nouveau mot de passe"
            android:inputType="textPassword"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonUpdatePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changer le mot de passe"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
