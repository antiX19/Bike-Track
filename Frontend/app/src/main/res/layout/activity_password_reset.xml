<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextRecoveryCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez le code de récupération"
        android:inputType="number"
        android:padding="20dp"
        android:gravity="left"/>

    <Button
        android:id="@+id/buttonValidateRecoveryCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider le code" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Nouveau mot de passe"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:hint="Confirmez le mot de passe"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mettre à jour le mot de passe" />
</LinearLayout>
