<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout for Title -->
    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:padding="20dp"
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/sign_up"
            android:textColor="@color/Title"
            android:textSize="32sp" />

    </LinearLayout>

    <!-- ScrollView Constrained to the Top of btnFindBike -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="390dp"
        android:layout_height="523dp"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLinearLayout">

        <LinearLayout
            android:id="@+id/scrollViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/email_entry"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/username_entry"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/password_confirmation"

                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/heavy_gray" />

            <EditText
                android:id="@+id/pinCodeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/pin_code_combined"
                android:inputType="number"
                android:padding="12dp" />

            <Spinner
                android:id="@+id/securityQuestionSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_bg_whitebg"
                android:padding="12dp" />

            <EditText
                android:id="@+id/securityAnswerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:hint="@string/answer_to_security_question"
                android:inputType="text"
                android:padding="12dp" />

            <TextView
                android:id="@+id/btnFindBike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="@string/find_your_bike"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/apptheme"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Button -->
    <LinearLayout

        android:id="@+id/bottomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/renamefoundBike"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:backgroundTint="@color/apptheme"
                android:fontFamily="@font/rubik_variablefont_wght"
                android:text="@string/renamebike"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/donotuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="" />

            <ImageView
                android:id="@+id/valideform"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:visibility="invisible"
                app:srcCompat="@drawable/validate" />
        </LinearLayout>

        <TextView
            android:id="@+id/mobileapp_reglementation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/reglementation"
            android:textColor="@color/heavy_gray"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
